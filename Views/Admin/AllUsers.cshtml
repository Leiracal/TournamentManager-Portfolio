@model List<TournamentManager.ViewModels.AdminManagesRoleViewModel>

@{
    ViewData["Title"] = "All Users for Admin";
}
<div class="text-center">
    <h1 class="display-4 page-title-highlight">All Users for Admin</h1>
    <br>
    <h4>This page displays all active users to the admin for user management.</h4>
    <h4 class="mb-2">If you wish to see Referee or Organizer role Pending Requests only, please click 'Check Pending Role Requests' button.</h4>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <a class="btn btn-success mb-5 ms-2" asp-area="" asp-controller="Admin" asp-action="PendingRequests">Check Pending Role Requests</a>
    
    <h4>If you accidentally delete a user, go to the Deleted Users page and click Restore User.</h4>

    <a class="btn btn-warning mb-5 ms-2" asp-area="" asp-controller="Admin" asp-action="DeletedUsers">View Deleted Users</a>

    <h5 class="lightblue-highlight mb-5">
        Message to Professor Ray: <br>
        Please try 'Edit User' or 'Delete User' features with a user you created through Register page.<br>
        Please avoid deleting seeded data users such as Admin, since it may be used for the other parts of the demo. Thank you.<br>        
    </h5>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Display Name</th>
                <th>Requested Role</th>
                <th>Current Role</th>
                <th>Edit User</th>
                <th>Delete User</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var userWithRoles in Model)
            {
                <tr>
                    <td>@userWithRoles.User.FirstName</td>
                    <td>@userWithRoles.User.LastName</td>
                    <td>@userWithRoles.User.Email</td>
                    <td>@userWithRoles.User.DisplayName</td>
                    <td>@userWithRoles.RequestedRole</td>
                    <td>@string.Join(", ", userWithRoles.Roles)</td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@userWithRoles.User.Id" class="btn btn-sm btn-primary">
                            Edit User
                        </a>
                    </td>
                    <td>
                        <form asp-action="DeleteUser" asp-route-id="@userWithRoles.User.Id" method="post"
                              style="display:inline"
                              onsubmit="return confirm('Are you sure you want to delete this user?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete This User
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

