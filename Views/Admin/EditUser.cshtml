@model TournamentManager.ViewModels.AdminEditUserViewModel

@{
    ViewData["Title"] = "Edit User for Admin";
}
<div class="text-center">
    <h1 class="display-4 page-title-highlight mb-5">Edit User for Admin Page</h1><br>

    <a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="Index">Admin Index</a>
    <a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="AllUsers">View All Users</a>
    <a class="btn btn-success" asp-area="" asp-controller="Admin" asp-action="PendingRequests">Check Pending Role Requests</a><br><br>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4 text-left">
            <form asp-action="EditUser" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email">Email should not be edit by Admin.</label>
                    <input asp-for="Email" class="form-control" readonly />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DisplayName">Display Name</label>
                    <input asp-for="DisplayName" class="form-control" />
                    <span asp-validation-for="DisplayName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Bio"></label>
                    <textarea asp-for="Bio" class="form-control"></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div><br /><br />

                <div class="form-group">
                    <label asp-for="ELO"></label>
                    <input asp-for="ELO" class="form-control" />
                    <span asp-validation-for="ELO" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CurrentRole"></label>
                    <input asp-for="CurrentRole" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="RequestedRole"></label>
                    <input asp-for="RequestedRole" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="NewRole">Choose New Role from pull-down list below</label>
                    <select name="NewRole" class="form-control">
                        <option value="" disabled selected>Please choose from this pull-down list</option>
                        <option value="Referee">Referee</option>
                        <option value="Organizer">Organizer</option>
                        <option value="Player">Player</option>
                        <option value="Admin">Admin</option>
                    </select>
                    <span asp-validation-for="NewRole" class="text-danger"></span>
                </div><br><br>

                <button type="submit" class="btn btn-success">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}