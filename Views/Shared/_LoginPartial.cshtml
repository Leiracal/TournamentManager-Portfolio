@using Microsoft.AspNetCore.Identity
@using TournamentManager.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@* The above code originally like these but changed it to the above code to adjust it to ApplicationUser instead of default IdenityUser.
    @inject SignInManager<IdentityUser> SignInManager
    @inject UserManager<IdentityUser> UserManager *@

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        var currentUser = await UserManager.GetUserAsync(User);

    <li class="nav-item">  
        <span class="nav-link text-dark">
            Hello, @(currentUser?.NameToShow ?? User.Identity?.Name)!
        </span>
    </li>
    <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-outline-secondary" asp-area="" asp-controller="SeedUser" asp-action="CreateUsers">Create Users</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
    </li>
}
</ul>
