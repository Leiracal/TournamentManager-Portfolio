@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TournamentManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TournamentManager.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TournamentManager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item ms-2">
                                <a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="Index">Admin Main</a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="btn btn-outline-secondary" asp-area="" asp-controller="SeedUser" asp-action="CreatePlayers">Create Players</a>
                            </li>
                        }
                        @if (User.IsInRole("Organizer") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item ms-2">
                                <a class="btn btn-primary" asp-area="" asp-controller="Organizer" asp-action="Index">Organizer Main</a>
                            </li>
                        }
                        @* Removing specific button for Referee Main, this will be the Tournaments page 
                        where permission to select winners is available.
 *@
@*                         @if (User.IsInRole("Referee") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item ms-2">
                                <a class="btn btn-primary" asp-area="" asp-controller="Referee" asp-action="Index">Referee Main</a>
                            </li>
                        } *@
                        @if (User.IsInRole("Player") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item ms-2">
                                <a class="btn btn-primary" asp-area="" asp-controller="Player" asp-action="Dashboard">Player Main</a>
                            </li>
                        }
                        <li class="nav-item ms-2">
                            <a class="btn btn-success" asp-area="" asp-controller="Tournament" asp-action="Index">Tournaments</a>
                        </li>
                        @* Removeed Bracket button because this can now be viewed by anyone (including public) from Tournaments page *@

@*                         <li class="nav-item ms-2">
                            <a class="btn btn-dark" asp-area="" asp-controller="Home" asp-action="Bracket">Bracket</a>
                        </li> *@

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item ms-2">
                                <a class="btn btn-primary" asp-controller="Player" asp-action="Profile">My Profile</a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="btn btn-primary" asp-controller="Account" asp-action="SoftDeleteOwnAccount">My Account</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 Fall - TournamentManager - INFO-2644 - PC & Web Capstone - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
